<%= form_tag sessions_path, {:class => 'form-group'} do %>
<h1>Sign In</h1>
<%= label_tag :email, 'Email', class: '' %>
<%= text_field_tag :email, params[:email], class: 'form-control' %><br>
<%= label_tag :password, 'Password', class: '' %>
<%= password_field_tag :password, nil, class: 'form-control' %><br>
<%= submit_tag 'Log in', class: 'btn' %>
<%= link_to "Don't have an account?", new_user_path, class: 'btn' %>
<% end %>